#!/bin/sh

##############################################
# Fonts
##############################################

UUSHI="-*-uushi-medium-r-normal--11-90-75-75-p-58-iso10646-1"
LEMON="-benis-lemon-*-*-*-*-*-*-*-*-*-*-*-*"
TEWI="-lucy-Tewi-medium-*-normal--11-90-75-75-p-58-iso10646-1"
LIME="-*-lime-*-*-*-*-*-*-*-*-*-*-*-*"
TERMINUS="-*-terminus-medium-r-normal-*-12-*-*-*-c-*-*-1"
STLARCH="-*-stlarch-*-*-*-*-*-*-*-*-*-*-*-*"
ANON_PRO="-*-Anonymous Pro-medium-*-*-*-11-*-*-*-*-*-*-*"
DWEEP="-*-dweep-medium-r-semicondensed-*-11-*-*-*-*-*-*-*"


##############################################
# Color definitions
##############################################
# ARGB hex format
BK0='#FF1D1F21'
BK1='#FF282A2E'
GY0='#FF373B41'
GY1='#FF969896'
GY2='#FFB4B7B4'
GY3='#FFDC5C8C6'
WT0='#FFE0E0E0'
WT1='#FFFFFFFF'
RD='#FFCC342B'
OR='#FFF96A38'
YL='#FFFBA922'
GN='#FF198844'
CY='#FF3971ED'
BL='#FF3971ED'
MG='#FFA36AC7'
CL='#00FFFFFF'

##############################################
# panel/bar
##############################################

PANEL_HEIGHT=12

COLOR_FG=$GY2
COLOR_BG=$BK0

COLOR_FOCUSED_FG=$WT0

COLOR_OCCUPIED_FG=$GY2
COLOR_FREE_FG=$GY0
COLOR_URGENT_FG=$RD

COLOR_LAYOUT_FG=$GY0
COLOR_TITLE_FG=$GY2

COLOR_STATUS_FG=$GY2
COLOR_WARN=$RD
COLOR_NULL=$GY0
COLOR_GOOD=$GN


##############################################
# bspwm
##############################################

SPLIT_RATIO=0.4
BORDER_WIDTH=2
WINDOW_GAP=40

argb2rgb(){ # remove alpha channel from hex color
	echo $(echo $1 | sed 's/#../#/')
}
COLOR_BORDER=$(argb2rgb $BK1)
COLOR_BORDER_FOCUSED=$(argb2rgb $GY0)
COLOR_BORDER_ACTIVE=$(argb2rgb $GY0)
COLOR_BORDER_PRESEL=$(argb2rgb $WT0)
COLOR_BORDER_LOCKED=$(argb2rgb $YL)
COLOR_BORDER_STICKY=$(argb2rgb $MG)
COLOR_BORDER_PRIVATE=$(argb2rgb $CY)
COLOR_BORDER_URGENT=$(argb2rgb $RD)
