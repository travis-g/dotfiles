! ~/etc/Xresources

!! rxvt-unicode 
URxvt*font: -*-gohufont-medium-r-normal-*-11-*-*-*-*-*-*-*
URxvt*boldFont: -*-gohufont-bold-r-normal-*-11-*-*-*-*-*-*-*
URxvt*italicFont: -*-gohufont-medium-r-normal-*-11-*-*-*-*-*-*-*
URxvt*bolditalicFont: -*-gohufont-bold-r-normal-*-11-*-*-*-*-*-*-*

URxvt*cursorBlink: true
URxvt*scrollBar: false
URxvt*internalBorder: 3
URxvt*dynamicColors: on
URxvt*urgentOnBell: true
URxvt*savelines: 1000

! extra (requires URxvt-perls)
URxvt.perl-ext: default,url-select
URxvt.perl-ext-common: vtwheel
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/luakit
URxvt.url-select.underline: true

!! XFont configs
Xft*antialias: true
Xft*autohint: true
Xft*hinting: true
Xft*hintstyle: hintslight
Xft*lcdfilter: lcdlight
Xft*rgba: rgb
Xft*dpi: 96

