# bspwm hotkeys
#
# source master config file
#. /home/t/.vars_master

# Toggle panels
alt + q
	{pkill panel; pkill bar; pkill conky; bspc config top_padding 0; bspc exit 0,\
	bspc config top_padding 12; /home/t/.config/bspwm/panel & }

# Workstation Monitor
alt + w
	bspc monitor -f next

# Close window
alt + @F4
	bspc window -c

# Kill window
alt + shift + @F4
	bspc window -k

# Toggle floating, fullscreen
alt + {_,shift +} t
	bspc window -t {floating,fullscreen}

# Toggle monocle
alt + space 
	bspc desktop -l next

# Toggle pseudo-tiled
alt + shift + space 
	bspc window -t pseudo_tiled

#
# Modify window states
#
# Privatize node
alt + shift + p
	bspc window -t private

# Lock a window from closing
#alt + shift + l
#	bspc window -t locked

# Sticky node
alt + shift + s
	bspc window -t sticky

# Presel window for splitting
alt + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

# Move window into presel position
alt + shift {a,s,d,f}
	bspc window -w {left,up,down,right}

# Select windows, or move
alt + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right} || bspc window -f {prev, prev, next, next}

# Move floating windows (requires baskerville's xdo)
alt + {Left,Right,Up,Down}
    xdo move {-x -20,-x +20,-y -20,-y +20}

# Resize floating windows
alt + shift + {Left,Right,Up,Down}
    xdo resize {-w -20,-w +20,-h -20,-h +20}
        bspc window -e {left -10,down +10,up -10,right +10} || {right -10,up +10,down -10,left +10}

# Mirror and flip leaves of tree
alt + {comma,period}
	bspc desktop -F {horizontal,vertical}

# Rotate leaves of tree
alt + shift + {comma,period}
	bspc desktop -R {90,270}

# Select previous / next desktop
alt + {p,n}
	bspc desktop -f {prev.occupied,next.occupied} 


# Change window gap
alt + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 5 ))

# Focus or move window to desktops
super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,0}

#
# mouse bindings
#

# Move or resize window
alt + button{1-3}
	bspc pointer -g {resize_corner,resize_side,move[]}
# Needed for ^^^^
alt + !button{1-3}
    bspc pointer -t %i %i


super + @button{1-3}
    bspc pointer -u

#
# spawn programs
#

super + Return
	urxvt

ctrl + shift + Escape
	urxvt -e htop

super + space
	dmenu_run

ctrl + alt + Delete
	pkill panel && bspc quit 1 && pkill bar && pkill sxhkd

Print
	scrot -q 100

super + c
	google-chrome-stable
super + shift + c
	google-chrome-stable --incognito

super + f
	firefox

#
# Media keys
#

XF86Audio{Raise,Lower}Volume
	amixer set Master {5+,5-}; /home/t/.config/bspwm/scripts/notify-volume

XF86AudioMute
	/home/t/.config/bspwm/scripts/mute

#XF86Sleep

XF86WLAN
	/home/t/.config/bspwm/scripts/notify-wifi

XF86MonBrightness{Up,Down}
	/home/t/.config/bspwm/scripts/notify-brightness

# make sxhkd reload its configuration files:
alt + shift + Escape
	pkill -USR1 -x sxhkd && sxhkd
