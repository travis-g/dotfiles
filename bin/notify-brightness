#!/bin/sh
brightnessLevel=$(cat /sys/class/backlight/eeepc/actual_brightness)
maxBrightness=$(cat /sys/class/backlight/eeepc/max_brightness)
case $brightnessLevel in
        0)      dots="○○○○○○○○○○○○○○○";;
        1)      dots="•○○○○○○○○○○○○○○";;
        2)      dots="••○○○○○○○○○○○○○";;
        3)      dots="•••○○○○○○○○○○○○";;
        4)      dots="••••○○○○○○○○○○○";;
        5)      dots="•••••○○○○○○○○○○";;
        6)      dots="••••••○○○○○○○○○";;
        7)      dots="•••••••○○○○○○○○";;
        8)      dots="••••••••○○○○○○○";;
        9)      dots="•••••••••○○○○○○";;
        10)     dots="••••••••••○○○○○";;
        11)     dots="•••••••••••○○○○";;
        12)     dots="••••••••••••○○○";;
        13)     dots="•••••••••••••○○";;
        14)     dots="••••••••••••••○";;
        15)     dots="•••••••••••••••";;
esac
notify-send "Brightness:" "`echo $dots`"
