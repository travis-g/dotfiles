export PATH=$PATH:~/bin
export EDITOR=vim

# Custom bash prompt
PS1='─── '

# Color dir contents:
alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Package commands:
alias inst='yaourt'
alias search='yaourt'
alias remove='sudo pacman -Rns'

alias git='hub'
