" vim: set ft=vimperator:et:sw=4:ts=4:sts=4
set gui=none,tabs
set noscrollbars

set ac=false

set hintchars=hjklasdfgyuiopqwertnmzxcvb
"set hintchars=asdfhjkl
"set hintchars=asdfgqwertzxchjklyuiopnmvb " left-hand

" scroll more
noremap j 3j
noremap k 3k

" toggle statusline
map <silent> <F8> :js toggle_bottombar()<CR>

:js << EOF
function toggle_bottombar() {
	var bb = document.getElementById('liberator-bottombar');
	if (!bb) return;
	bb.style.height = (bb.style.height == '') ? '0px' : '';
	bb.style.overflow = (bb.style.height == '') ? '' : 'hidden';
}
EOF
