#!/bin/sh
volLevel=$(amixer get Master | tail -n 1 | cut -d '[' -f 2 | sed 's/\%].*//g')
case $volLevel in
	100)	dots="••••••••••";;
	1*)	dots="•○○○○○○○○○";;
	2*)	dots="••○○○○○○○○";;
	3*)	dots="•••○○○○○○○";;
	4*)	dots="••••○○○○○○";;
	5*)	dots="•••••○○○○○";;
	6*)	dots="••••••○○○○";;
	7*)	dots="•••••••○○○";;
	8*)	dots="••••••••○○";;
	9*)	dots="•••••••••○";;
	*)	dots="○○○○○○○○○○";;
esac
notify-send "Volume:" "`echo $dots`"
